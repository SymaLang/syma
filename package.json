{
  "name": "syma-monorepo",
  "private": true,
  "version": "0.5.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "repl": "npm run -w @syma/cli repl",
    "build:parser": "npm run -w tree-sitter-syma generate && npm run -w tree-sitter-syma build-wasm",
    "build:parser:node": "npm run -w tree-sitter-syma build",
    "test:parser": "npm test -w tree-sitter-syma",
    "build:stdlib": "npm run -w @syma/stdlib build",
    "dev": "npm run -w @syma/notebook dev",
    "build": "npm run build:stdlib && npm run -w @syma/notebook build",
    "preview": "npm run -w @syma/notebook preview",
    "compile": "node packages/cli/bin/syma-compile.js packages/demos/syma/*.syma --bundle --entry App/Main --out public/universe.json --pretty"
  },
  "devDependencies": {
    "@rollup/pluginutils": "^5.3.0",
    "@vitejs/plugin-react": "^5.0.3",
    "tree-sitter-cli": "^0.25.9",
    "vite": "^7.1.2"
  },
  "dependencies": {
    "@floating-ui/react": "^0.27.16",
    "@heroicons/react": "^2.2.0",
    "@monaco-editor/react": "^4.7.0",
    "@tailwindcss/vite": "^4.1.13",
    "clsx": "^2.1.1",
    "glob": "^11.0.3",
    "katex": "^0.16.22",
    "marked": "^16.3.0",
    "monaco-editor": "^0.53.0",
    "nanoid": "^5.1.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-markdown": "^10.1.0",
    "rehype-katex": "^7.0.1",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "tailwindcss": "^4.1.13",
    "tree-sitter": "^0.25.0",
    "web-tree-sitter": "^0.25.9",
    "zustand": "^5.0.8"
  }
}
